* 
  margin 0
  padding 0

html
body 
  height 100%
  // background-image url("/static/images/home/bg.png")
  // background-repeat repeat
  // background-color rgb(23, 21, 26)
  background-color rgb(41, 49, 52)
  font-family "微软雅黑", "HelveticaNeue-Light", "Helvetica Neue Light",  "Helvetica Neue", "Helvetica", "Arial", "Lucida Grande", "sans-serif"
  -webkit-font-smoothing antialiased
  -webkit-tap-highlight-color rgba(0,0,0,0)
  -webkit-user-select none
  min-width 320px

.clearfix
  clear both
  &:after
    display table
    clear both
  &:before
    display table
    clear both

.container
  width 500px
  height 320px
  margin 0 auto
  margin-top 150px
  position relative
  
.login-wrap
.register-wrap
  width 100%
  height 100%
  position absolute
  top 0
  left 0

.register-wrap 
  display none

.login-wrap
  .user-photo 
    display block
    width 90px
    height 90px
    border-radius 50%
    border 1px solid rgba(0, 0, 0, 0.7)
    margin 0 auto
  .id
  .pass
    font-size 16px
    font-weight bold
    outline none
    border 3px solid rgba(0, 0, 0, 0.3)
    border-radius 4px
    width 300px
    height 36px
    padding 3px 8px
    color #fff
    background-color rgb(41, 49, 52)
  .icon
    border-radius 50%
    width 54px
    height 54px
    display inline-block
    margin-right 5px
    margin-left 40px
    background-size contain
    line-height 54px
    background-repeat no-repeat
    &:after
      content '\3000'
  .id-wrap
  .pass-wrap
    margin 10px 0
  .id-wrap
    .icon
      background-image url('/static/images/home/user-icon.png')
  .pass-wrap
    .icon
      background-image url('/static/images/home/pass-icon.png')
  .login-btn
    border-radius 50%
    background-image url('/static/images/home/login-btn.png')
    height 54px
    width 54px
    background-size contain
    background-repeat no-repeat
    float right
    margin-right 78px
    cursor pointer
  .to-register
    color #ccc
    display block
    cursor pointer
    margin-left 100px
    text-decoration none
    font-size 17px
    &:hover
      text-decoration underline
      color red
      
.register-wrap
  padding-top 80px
  .msg
    margin-top 20px
  .name
  .pass
  .confirm-pass
    font-size 16px
    font-weight bold
    outline none
    border 3px solid rgba(0, 0, 0, 0.3)
    border-radius 4px
    width 300px
    height 36px
    padding 3px 8px
    color #fff
    display block
    background-color rgb(41, 49, 52)
    margin 10px auto
  .operate
    margin 0 auto
    margin-top 20px
    position relative
    height 36px
    .btn
      display inline-block
      position absolute
      top 0
      left 50%
      color #fff
      width 100px
      height 100%
      font-size 18px
      border 1px solid #fff
      text-align center
      line-height 36px
      border-radius 5px
      cursor pointer
      &:hover
        background-color rgb(62, 175, 136)
    .submit
      margin-left -130px
    .to-login
      margin-left 30px

.msg 
  color rgb(226, 13, 31)
  text-align center
  width 75%
  margin 0 auto
  display block
  font-weight bold
  clear both
  margin-top 40px

@media screen and (max-width:414px)
  html
  body
    display table
  .container
    width 100%
    height 50%
    margin-top 30%
  .login-wrap 
    .id
    .pass
      width 50%
  .register-wrap
    .name
    .pass-control
      width 80%

    


      
    
    