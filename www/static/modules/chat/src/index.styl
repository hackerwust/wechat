* 
  margin 0
  padding 0

html
body 
  height 100%
  font-family "微软雅黑", "HelveticaNeue-Light", "Helvetica Neue Light",  "Helvetica Neue", "Helvetica", "Arial", "Lucida Grande", "sans-serif"
  -webkit-font-smoothing antialiased
  -webkit-tap-highlight-color rgba(0,0,0,0)
  -webkit-user-select none
  min-width 800px
  font-size 14px

.clearfix
  clear both
  &:after
    display table
    content ""
    clear both
  &:before
    display table
    content ""
    clear both

.shake
  animation shake .2s 2 linear
  -webkit-animation shake .2s 2 linear
  -moz-animation shake .2s 2 linear

@keyframes shake
  form {
    transform: translateX(-4px)
    -webkit-transform: translateX(-4px)
    -moz-transform: translateX(-4px)
  }
  33% {
    transform: translateX(0)
    -webkit-transform: translateX(0)
    -moztransform: translateX(0)
  }
  66% {
    transform: translateX(4px)
    -wekbit-transform: translateX(4px)
    -moz-transform: translateX(4px)
  }
  to {
    transform: translateX(0)
    -webkit-transform: translateX(0)
    -moz-transform: translateX(0)
  }
  
@-webkit-keyframes shake
  form {
    transform: translateX(-4px)
    -webkit-transform: translateX(-4px)
    -moz-transform: translateX(-4px)
  }
  33% {
    transform: translateX(0)
    -webkit-transform: translateX(0)
    -moztransform: translateX(0)
  }
  66% {
    transform: translateX(4px)
    -wekbit-transform: translateX(4px)
    -moz-transform: translateX(4px)
  }
  to {
    transform: translateX(0)
    -webkit-transform: translateX(0)
    -moz-transform: translateX(0)
  }
  
@-moz-keyframes shake
  form {
    transform: translateX(-4px)
    -webkit-transform: translateX(-4px)
    -moz-transform: translateX(-4px)
  }
  33% {
    transform: translateX(0)
    -webkit-transform: translateX(0)
    -moztransform: translateX(0)
  }
  66% {
    transform: translateX(4px)
    -wekbit-transform: translateX(4px)
    -moz-transform: translateX(4px)
  }
  to {
    transform: translateX(0)
    -webkit-transform: translateX(0)
    -moz-transform: translateX(0)
  }

.container
  width 100%
  height 100%
  margin 0 auto
  padding-left 310px
  box-sizing border-box
  .self-info-wrap
  .chat-window
  .friend-list-wrap
    height 100%
    box-sizing border-box
  
.self-info-wrap
  background-color rgb(23, 21, 26)
  width 70px
  color #fff
  float left
  display inline-block
  margin-left -310px
  padding-top 30px
  font-size 11px
  .photo
    width 48px
    display block
    margin 0 auto
    border-radius 50%
    cursor pointer
  .name
    display block
    text-align center
    margin 10px 0
  .logout
    color #fff
    width 40px
    display block
    height 18px
    line-height 18px
    margin 0 auto
    text-align center
    cursor pointer
    border 1px solid #ccc
    border-radius 3px
    text-decoration none
    &:hover
      background-color #ff624f
      
.friend-list-wrap
  width 240px
  display inline-block
  background-color rgb(244, 244, 244)
  float left
  margin-left -240px
  border-right 1px solid rgba(0, 0, 0, 0.1)
  padding-top 40px
  .friend-nav 
    font-weight bold
    box-sizing border-box
    width 100%
    color rgb(39, 117, 196)
    padding 0 0 5px 14px
    border-bottom 1px solid #ccc
  .friends-wrap
    overflow scroll
    .friend
    .group
      padding 7px 0
      cursor pointer
      height 48px
      position relative
    .photo
      width 48px
      height 48px
      display inline-block
      border-radius 50%
      margin 0 8px 0 13px
      vertical-align -22px
    .active
      background-color rgb(224, 224, 224)
  .log-num 
    position absolute
    top 20px 
    right 12px
    line-height 20px
    text-align center
    display inline-block
    background-color rgb(242, 66, 63)
    width 20px
    height 20px
    color #fff
    font-size 12px
    border-radius 50%
  .name-and-status
    display inline-block
    .status
      display block
      height 10px
      width 10px
      border-radius 50%
      margin-top 3px
      background-color rgb(93, 241, 46)
    .offline
      background-color rgb(164, 170, 172)
  .group
    .photo
      width 42px
      height 42px
      vertical-align -16px
      margin-right 14px
    .log-num
      top 18px
    
.chat-window
  width 100%
  .chat-log-wrap
    width 100%
    height 76%
    overflow-y scroll
    overflow-x hidden
  .type-write-wrap
    width 100%
    height 24%
    box-sizing border-box
    overflow-y scroll
    overflow-x hidden
    resize none
    outline none
    border 0
    font-size 16px
    padding 10px
    border-top 1px solid rgba(0, 0, 0, 0.1)
  .item
    width 100%
    box-sizing border-box
    margin-bottom 20px
    padding 0 12px
    display table
    .time
      display block
      text-align center
    .log
      position relative
      min-width 400px
      width 58%
    .photo
      width 30px
      height 30px
      position absolute
      border-radius 50%
      border 1px solid rgba(0, 0, 0, 0.1)
    .content
      border-radius 5px
      min-height 22px
      display inline-block
      padding 6px
  .other
    .log
      padding 8px 0 0 36px
    .photo
      top 0
      left 0
    .content
      background-color rgb(202, 233, 242)
  .self
    .log
      padding 8px 36px 0 0
      float right
    .photo
      top 0
      right 0
    .content
      background-color rgb(224, 224, 224)
      float right

